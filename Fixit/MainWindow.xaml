<Window x:Class="Fixit.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Fixit"
        mc:Ignorable="d"
        Title="MainWindow" Height="521" Width="796.5">
    <Grid>
        <Grid>
            <Button x:Name="FixItOpen" Content="Open" HorizontalAlignment="Left" Margin="18,9,0,0" VerticalAlignment="Top" Width="75" Click="btnOpen_Click"/>
            <Label Content="Old Path" HorizontalAlignment="Left" Margin="101,6,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.382,0.406"/>
            <TextBox x:Name="txtPath" HorizontalAlignment="Left" Height="23" Margin="171,10,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="269" IsReadOnly="True"/>
            <Label Content="Orinal File Name" HorizontalAlignment="Left" Margin="169,134,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.382,0.406" Width="112"/>
            <Button x:Name="DefaultPath" Content="Make Default" HorizontalAlignment="Left" Margin="464,12,0,0" VerticalAlignment="Top" Width="75" Click="DefaultPath_Click"/>
            <Button x:Name="OpenNewPath" Content="Open" HorizontalAlignment="Left" Margin="18,51,0,0" VerticalAlignment="Top" Width="75"/>
            <Label Content="New Path" HorizontalAlignment="Left" Margin="101,48,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.382,0.406"/>
            <TextBox x:Name="NewPathText" HorizontalAlignment="Left" Height="23" Margin="169,52,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="269" IsReadOnly="True"/>
            <DataGrid x:Name="FileListTable" HorizontalAlignment="Left" Height="298" Margin="10,182,0,0" VerticalAlignment="Top" Width="482" IsReadOnly="True" SelectionChanged="FileListTable_SelectionChanged">
                <DataGrid.Columns>
                    <DataGridTextColumn Foreground="Black" Width="60" Header="Test Header" IsReadOnly="false" />
                    <DataGridTextColumn Foreground="Black" Width="60" Header="Test Header" IsReadOnly="true" />
                </DataGrid.Columns>
            </DataGrid>

        </Grid>

    </Grid>
</Window>
